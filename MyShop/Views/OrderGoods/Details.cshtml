@using MyShop.Models

@model IEnumerable<OrderGood>

@{
    ViewData["Title"] = "Details";
}

<div style="padding: 10px">
    <h1>Details</h1>

    <div>
        <h4>OrderGood</h4>
        <hr />
        <dl class="row">
            @foreach (OrderGood item in Model)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(item => item.Sum)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.Sum)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(item => item.Good.AuthorMail)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.Good.AuthorMail)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(item => item.Good.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.Good.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(item => item.Good.CategoryName)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.Good.CategoryName)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(item => item.Good.ShortDesc)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.Good.ShortDesc)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(item => item.Good.LongDesc)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(modelItem => item.Good.LongDesc)
                </dd>
                <br />
                <br />
            }
        </dl>
    </div>
    <div>
        <a class="btn btn-primary" asp-controller="Orders" asp-action="Index">Back to List</a>
    </div>
</div>