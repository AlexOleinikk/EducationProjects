@using MyShop.MyFolder

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyShop.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        input:focus::placeholder {
  color: transparent;
}
    </style>
</head>
<body>
    
    <div class="My-Own-header" style="margin: 0px; padding: 0px; width: 100%; position: fixed; top: 0; z-index: 10">
        <div class="px-3 py-2 bg-dark text-white">
            <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                    <a href="/" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
                    </a>

                    <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                    <li>
                        <a class="nav-link text-white" asp-controller="Orders" asp-action="Index">
                        <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#grid"></use></svg>
                        History of Orders
                        </a>
                    </li>
                    <li>
                        <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">
                        <svg class="bi d-block mx-auto mb-1" width="24" height="24"><use xlink:href="#people-circle"></use></svg>
                        Cart
                        </a>
                    </li>
                    </ul>
                </div>
            </div>
        </div>


        <div class="px-3 py-2 border-bottom mb-3" style="background-color: white;">
            <div class="container d-flex flex-wrap justify-content-end">
                <div class="text-end">
                    <button type="button" class="btn btn-light text-dark me-2" onclick="location.href='@Url.Action("Create", "Goods")'">Publish my good</button>
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Authorization")'">Sign-out</button>
                </div>
            </div>
        </div>
    </div>


    <div class="My-Own-Sidebar bg-dark" style="float: left; margin: 0px; padding: 0px; width: 270px; overflow-y: auto; position: fixed; top: 145px; height: 100%">
        <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                <span class="fs-4">Links to social media</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto" style="width: 90%">
                <li class="nav-item">
                <a href="https://www.instagram.com/sanya_oleynik_02/?hl=en" class="nav-link" aria-current="page">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"></use></svg>
                    Instagram
                </a>
                </li>
                <li>
                <a href="https://www.linkedin.com/in/%D0%B0%D0%BB%D0%B5%D0%BA%D1%81%D0%B0%D0%BD%D0%B4%D1%80-%D0%BE%D0%BB%D0%B5%D0%B9%D0%BD%D0%B8%D0%BA-a87101193/" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                    LinkedIn
                </a>
                </li>
                <li>
                <a href="https://github.com/AlexTheProger/EducationProjects" class="nav-link text-white">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#table"></use></svg>
                    GitHub
                </a>
                </li>
            </ul>
        </div>
    </div>


    <div class="My-Own-MainContent" style="float: none; margin: 0 270px 0; padding: 0px; width: calc(100% - 540px);">
        <div style="margin-top: 145px">
            @RenderBody()
        </div>

        <div class="My-Own-Footer" style="margin: 0px; padding: 0; position: sticky; bottom: 0; width: 100%;">
            <div class="My-Text-Container" style="float: left; padding: 50px;">
                © 2022 Oleksandr Oliinyk
            </div>

            <ul class="My-Links-ToSocialMedia" style="float: right; list-style-type: none; margin: 0; padding: 50px;">
                <li class="ms-3" style="float: right;"><a class="text-muted" href="https://www.instagram.com/sanya_oleynik_02/?hl=en"><img src="~/icons/instagram.jpg" /></a></li>
                <li class="ms-3" style="float: right;"><a class="text-muted" href="https://www.linkedin.com/in/%D0%B0%D0%BB%D0%B5%D0%BA%D1%81%D0%B0%D0%BD%D0%B4%D1%80-%D0%BE%D0%BB%D0%B5%D0%B9%D0%BD%D0%B8%D0%BA-a87101193/"><img src="~/icons/linkedin.jpg" /></a></li>
                <li class="ms-3" style="float: right;"><a class="text-muted" href="https://github.com/AlexTheProger/EducationProjects"><img src="~/icons/github.jpg" /></a></li>
            </ul>
        </div>
    </div>


    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
